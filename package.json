{
	"name": "portfolio",
	"version": "1.0.0",
	"description": "",
	"license": "ISC",
	"author": "",
	"main": "index.js",
	"scripts": {
		"dev": "npm run dev:eleventy",
		"dev:eleventy": "cross-env ELEVENTY_ENV=development npx @11ty/eleventy --serve",
		"dev:tailwind": "npx tailwindcss -i ./src/asset/style/input.css -o ./src/asset/style/app.css --watch",

		"build": "npm run build:eleventy && npm run build:pagefind && npm run build:tailwind",
		"build:eleventy": "cross-env ELEVENTY_ENV=production npx @11ty/eleventy",
		"build:tailwind": "npx tailwindcss -i ./src/asset/style/input.css -o ./src/asset/style/app.css --minify",
		"build:pagefind": "pagefind --site _site",

		"deploy": "npm run build && gh-pages -d _site"
	},
	"dependencies": {
		"@11ty/eleventy": "^3.1.2",
		"@tailwindcss/cli": "^4.1.18"
	},
	"devDependencies": {
		"cross-env": "^10.1.0",
		"gh-pages": "^6.3.0",
		"pagefind": "^1.4.0",
		"tailwindcss": "^4.1.18"
	}
}
